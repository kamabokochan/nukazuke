@import '_reset'

.root {
  min-width: 320px;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
  overflow: hidden;
  // background: #faa;
  background-image: url('/bg.jpg')
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
}

.wrap {
  width: 300px;
  background: rgba(255,255,255,0.5);
  padding: 24px 36px;
  margin: 0 12px;
  backdrop-filter: blur(4px);
  box-shadow: 2px 2px 6px 0 #191919;
}

.icon-wrap {
  width: 120px;
  border-radius: 50%;
  margin: auto;
  overflow: hidden;
}

.social-list {
  width: 270px;
  margin: auto;
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin-top: 28px;
  // padding-bottom: 32px;
  > li {
    a {
      display: block;
      width: 40px;
      height: 40px;
      border-radius: 50%;
      margin: auto;
      overflow: hidden;
    }
  }
}

.social-name {
  margin-top: 6px;
  color: #333;
  font-size: 10px;
  text-align: center;
}